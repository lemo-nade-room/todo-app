# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                             controllers.HomeController.index

POST    /todo/create                  controllers.TodoController.create
POST    /todo/update                  controllers.TodoController.update
POST    /todo/delete                  controllers.TodoController.delete

POST    /category/create              controllers.CategoryController.create
POST    /category/update              controllers.CategoryController.update
POST    /category/delete              controllers.CategoryController.delete

GET     /api/category                 controllers.api.ApiCategoryController.index
POST    /api/category                 controllers.api.ApiCategoryController.create
PUT     /api/category                 controllers.api.ApiCategoryController.update
DELETE  /api/category/:id             controllers.api.ApiCategoryController.delete(id: Long)

GET     /api/:slug/:state/:page       controllers.api.ApiTodoController.index(slug: String, state: Int, page: Int)
POST    /api/todo                     controllers.api.ApiTodoController.create
PUT     /api/todo                     controllers.api.ApiTodoController.update
DELETE  /api/todo/:id                 controllers.api.ApiTodoController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
